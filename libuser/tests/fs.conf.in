[defaults]
# non-portable
moduledir = @TOP_BUILDDIR@/modules/.libs
skeleton = @WORKDIR@/skel
modules = files shadow
create_modules = files shadow
crypt_style = md5

[userdefaults]
LU_USERNAME = %n
LU_UIDNUMBER = 500
LU_GIDNUMBER = %u

[groupdefaults]
LU_GROUPNAME = %n
LU_GIDNUMBER = 500

[files]
directory = @WORKDIR@/files
nonroot = yes

[shadow]
directory = @WORKDIR@/files
nonroot = yes
